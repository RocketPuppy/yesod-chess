.square {
  display: inline-block;
  width: 80px;
  height: 80px;
}

.square .move {
  background: blue;
  width: 100%;
  height: 100%;
}
.square form {
  display: none;
}
.square span {
  font-size: 4em;
}
.square > span {
  color: gray;
}
.white {
  background: white;
}

.black {
  background: black;
}

.chess-board {
  border: 1px black solid;
  display: inline-block;
}
